---
interface Props {
  title: string;
  href?: string;
  description: string;
  tech: string[];
}

const { title, href, description, tech } = Astro.props;
---

<article class="py-3">
  <div>
    {href ? (
      <a href={href} class="font-medium text-text hover:text-accent transition-colors">
        {title}
      </a>
    ) : (
      <span class="font-medium text-text">{title}</span>
    )}
    <span class="text-muted"> — </span>
    <span class="text-muted">{description}</span>
  </div>
  <div class="mt-1 text-sm text-muted">
    {tech.join(" · ")}
  </div>
</article>

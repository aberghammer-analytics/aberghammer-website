---
import Base from "../layouts/Base.astro";

const pdfUrl = "/Anthony_Berghammer_Resume.pdf";
---

<Base title="Resume â€” Anthony Berghammer">
  <section class="py-8">
    <div class="flex items-baseline justify-between">
      <h1 class="text-[40px] font-medium leading-tight">Resume</h1>
      <a
        href={pdfUrl}
        download
        class="text-sm text-muted hover:text-accent transition-colors"
      >
        Download PDF
      </a>
    </div>

    <!-- PDF viewer: desktop only -->
    <iframe
      src={`${pdfUrl}#zoom=100`}
      title="Anthony Berghammer Resume"
      class="hidden md:block mt-6 border border-divider rounded"
      style="width: calc(100vw - 32rem); margin-left: calc(-50vw + 50% + 16rem); height: calc(100vh - 180px); min-height: 750px;"
    ></iframe>

    <!-- Mobile fallback -->
    <div class="block md:hidden mt-8 text-center">
      <p class="text-muted text-sm mb-4">PDF viewer isn't available on mobile.</p>
      <a
        href={pdfUrl}
        download
        class="inline-block px-5 py-2.5 text-sm font-medium border border-divider rounded hover:text-accent hover:border-accent transition-colors"
      >
        Download Resume
      </a>
    </div>
  </section>
</Base>

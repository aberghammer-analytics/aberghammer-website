---
import Base from "../layouts/Base.astro";
import ProjectCard from "../components/ProjectCard.astro";
import PublicationCard from "../components/PublicationCard.astro";
import ExperienceItem from "../components/ExperienceItem.astro";
---

<Base>
  <!-- Hero -->
  <section slot="hero" class="border-b border-accent">
    <div class="mx-auto max-w-[800px] px-9 pt-9 pb-12 md:pt-12 md:pb-16">
      <div class="flex items-baseline justify-between">
        <h1 class="text-[40px] font-medium leading-tight">Anthony Berghammer</h1>
        <nav class="flex gap-6 text-base">
          <a href="/" class="no-underline text-muted font-medium hover:text-accent transition-colors">Home</a>
          <a href="/resume" class="no-underline text-muted hover:text-accent transition-colors">Resume</a>
        </nav>
      </div>
      <div class="flex gap-5 mt-4">
        <a href="mailto:berghammer.anthony.j@gmail.com" class="text-accent hover:text-accent-hover transition-colors" aria-label="Email">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
            <rect x="2" y="4" width="20" height="16" rx="2"/>
            <path d="M22 4L12 13 2 4"/>
          </svg>
        </a>
        <a href="https://github.com/aberghammer-analytics" target="_blank" rel="noopener noreferrer" class="text-accent hover:text-accent-hover transition-colors" aria-label="GitHub">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
          </svg>
        </a>
        <a href="https://linkedin.com/in/anthony-berghammer" target="_blank" rel="noopener noreferrer" class="text-accent hover:text-accent-hover transition-colors" aria-label="LinkedIn">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Projects -->
  <section class="py-9">
    <h2 class="text-[28px] font-medium mb-4">Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <ProjectCard
        title="NBAStatPy"
        href="https://github.com/aberghammer-analytics/nbastatpy"
        description="Python package and MCP server for NBA data acquisition."
        tech={["Python", "FastMCP", "PyPI", "GitHub Actions"]}
      />
      <ProjectCard
        title="md-viewer"
        href="https://github.com/aberghammer-analytics/md-viewer"
        description="CLI markdown viewer/editor built with Tauri."
        tech={["Rust", "Tauri", "JavaScript", "Homebrew"]}
      />
    </div>
  </section>

  <!-- Experience -->
  <section class="py-9">
    <h2 class="text-[28px] font-medium">Work Experience</h2>
    <div class="mt-0">
      <ExperienceItem
        title="Research Data Scientist"
        company="RTI International"
        dates="Feb 2022 – Present"
        logo="/logos/rti.png"
        href="https://www.rti.org/"
      />
      <ExperienceItem
        title="Senior Decision Scientist"
        company="USAA"
        dates="Dec 2020 – Feb 2022"
        logo="/logos/usaa.png"
        href="https://www.usaa.com/?akredirect=true"
      />
      <ExperienceItem
        title="Data Scientist"
        company="EY"
        dates="Jun 2019 – Dec 2020"
        logo="/logos/ey.png"
        href="https://www.ey.com/en_us"
      />
    </div>
    <a href="/resume" class="inline-block mt-6 text-base text-accent hover:text-accent-hover transition-colors">
      View full resume →
    </a>
  </section>

  <!-- Publications -->
  <section class="py-9">
    <div class="flex flex-wrap items-baseline gap-x-3 mb-4">
      <h2 class="text-[28px] font-medium">Publications</h2>
      <a href="https://orcid.org/0000-0002-0011-066X" target="_blank" rel="noopener noreferrer" class="inline-flex items-center opacity-70 hover:opacity-100 transition-opacity" aria-label="ORCID profile">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" class="w-5 h-5">
          <circle cx="128" cy="128" r="128" fill="#A6CE39"/>
          <path d="M86.3 186.2H70.9V79.1h15.4v107.1z" fill="#fff"/>
          <path d="M108.9 79.1h41.6c39.6 0 57.6 30.1 57.6 53.6 0 27.4-21.5 53.6-57.6 53.6h-41.6V79.1zm15.4 93.3h24.5c34.9 0 42.9-26.5 42.9-39.7 0-21.5-13.7-39.7-43.7-39.7h-23.7v79.4z" fill="#fff"/>
          <circle cx="79.0" cy="64.0" r="9.2" fill="#fff"/>
        </svg>
      </a>
    </div>
    <div class="grid grid-cols-1 gap-4">
      <PublicationCard
        title="Evaluation of Text Cluster Naming with Generative Large Language Models"
        href="https://jds-online.org/journal/JDS/article/1385/info"
        publisher="JDS Online"
      />
      <PublicationCard
        title="Simulating the Effects of Medicaid Expansion on the Opioid Epidemic in North Carolina"
        href="https://www.sciencedirect.com/science/article/pii/S2772724624000465?via%3Dihub"
        publisher="ScienceDirect"
      />
      <PublicationCard
        title="Virtual Opioid User: Reproducing Opioid Use Phenomena with a Control Theory Model"
        href="https://ieeexplore.ieee.org/document/10015450"
        publisher="IEEE"
      />
    </div>
  </section>
</Base>
